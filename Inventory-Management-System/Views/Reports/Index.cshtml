@model ReportViewModel

@{
    ViewData["Title"] = "Reports";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2 class="mb-4">📊 Inventory Report</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Products</h5>
                    <p class="card-text display-6">@Model.TotalProducts</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <p class="card-text display-6">@Model.TotalOrders</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-5">⚠️ Low Stock Items</h4>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LowStockItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
